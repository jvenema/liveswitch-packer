{
    "builders": [{
        "type": "digitalocean",
        "ssh_username": "root",
        "api_token": "{{ user `digitalocean_token` }}",
        "image": "ubuntu-20-04-x64",
        "region": "nyc1",
        "size": "s-2vcpu-2gb-intel"
    },{    
        "type": "azure-arm",

        "client_id": "{{ user `azure_client_id` }}",
        "client_secret": "{{ user `azure_client_secret` }}",
        "tenant_id": "{{ user `azure_tenant_id` }}",
        "subscription_id": "{{ user `azure_subscription_id` }}",
    
        "managed_image_resource_group_name": "PackerLiveSwitchGroup",
        "managed_image_name": "PackerLiveSwitchImage",
    
        "os_type": "linux",
        "image_publisher": "Canonical",
        "image_offer": "UbuntuServer",
        "image_sku": "20.04-LTS",
    
        "azure_tags": {
            "dept": "Engineering",
            "task": "Image deployment"
        },
    
        "location": "East US",
        "vm_size": "Standard_DS2_v2"
    }],
    "provisioners": [{
        "type":"shell",
        "scripts":["prepare.sh"]
    },
    {
        "type":"file",
        "source":"liveswitch-docker-compose/",
        "destination":"/opt/liveswitch"
    },{
        "type":"shell",
        "scripts":["install.sh", "cleanup.sh", "img_check.sh"]
    },{
        "type":"shell",
        "expect_disconnect": true,
        "scripts":["finalize.sh"]
    }]
  }